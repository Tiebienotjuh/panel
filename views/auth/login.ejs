<html>
    <%- include ("head.ejs") %>    
    <body class="bg-[#0F1032] text-neutral-100">
        <form action="/api/signin" method="post" class="p-0 m-0">
            <div class="flex flex-col items-center justify-center h-screen w-full">
                <div class="bg-[#1B1C3E] px-8 w-[450px] rounded-lg shadow-lg">
                    <h2 class="text-3xl py-8"> <%= m("login") %></h2>
                    <div class="space-y-4">
                        <div class="space-y-2">
                            <label for="mail" class="text-neutral-200"><%= m("mail") %> <%= m("or") %> <%= m("username") %></label>
                            <input type="text" name="mail" class="w-full border-2 p-2 border-gray-300 rounded-md bg-neutral-200 text-black" required>
                        </div>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <label for="password" class="text-neutral-200"><%= m("password") %></label>
                                <a href="/login/reset-password" class="text-blue-500"><%= m("forgotPassword") %></a>
                            </div>
                            <input type="password" name="password" class="w-full border-2 p-2 border-gray-300 rounded-md bg-neutral-200 text-black" required>
                        </div>
                    </div>
                    <div class="mt-10">
                        <input type="text" name="csrf_token" value="" hidden>
                        <button type="submit" class="bg-[#5E72E4] hover:bg-[#5266DB] duration-200 py-3 px-4 rounded-md font-semibold uppercase text-xl text-white w-[100%]">Login</button>
                    </div>
                    <div class="p-8 w-[100%] flex items-center justify-center">
                        <h2><%= m("dontHaveAccount") %> <a class="text-blue-500" href="/register"><%= m("signUpHere") %></a></h2>
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>
