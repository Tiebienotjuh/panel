<html>
    <%- include ("head.ejs") %>    
    <body class="bg-[#f7f9fb]">
        <form action="/register" method="post" class="p-0 m-0">
            <div class="flex flex-col items-center justify-center h-screen w-full">
                <div class="bg-white px-8 w-[450px] rounded-lg shadow-lg">
                    <h2 class="text-3xl py-8">Register</h2>
                    <div class="space-y-4">
                        <div class="space-y-2">
                            <label for="email" class="text-zinc-800">Email</label>
                            <input type="text" name="email" class="w-full border-2 p-2 border-gray-300 rounded-md" required>
                        </div>
                        <div class="space-y-2">
                            <label for="username" class="text-zinc-800">Username</label>
                            <input type="text" name="username" class="w-full border-2 p-2 border-gray-300 rounded-md" required>
                        </div>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <label for="password" class="text-zinc-800">Password</label>
                                <a href="/login/reset-password" class="text-blue-500">Forgot Password?</a>
                            </div>
                            <input type="password" name="password" class="w-full border-2 p-2 border-gray-300 rounded-md" required>
                        </div>
                    </div>
                    <div class="mt-10">
                        <input type="text" name="csrf_token" value="" hidden>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 duration-200 py-3 px-4 rounded-md font-semibold uppercase text-xl text-white w-[100%]">Register</button>
                    </div>
                    <div class="p-8 w-[100%] flex items-center justify-center">
                        <h2>Already have an account? <a class="text-blue-500" href="/login">Login here</a></h2>
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>
